<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_marginTop="90dp"
        android:layout_gravity="center"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/wifi"/>

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Không kết nối mạng,trái tim tôi trống rỗng"
        android:textColor="#999999"
        android:textSize="13sp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="100dp">
    <Button
        android:padding="10dp"

        android:id="@+id/btn_connet"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/ik_btn_cicle_f"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_gravity="center"
        android:text="Nhấp để kết nối 3G"
        android:textColor="#999999" />
    <Button
        android:layout_marginLeft="5dp"
        android:padding="10dp"
        android:id="@+id/btn_connet1"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/ik_btn_cicle_f"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_gravity="center"
        android:text="Nhấp để kết nối Wifi"
        android:textColor="#999999" />

</LinearLayout>


</LinearLayout>